{% extends 'base.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}
    <h1>Candidat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidat.id }}</td>
            </tr>
            <tr>
                <th>Civilite</th>
                <td>{{ candidat.civilite }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ candidat.nom }}</td>
            </tr>
            <tr>
                <th>Prenoms</th>
                <td>{{ candidat.prenoms }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ candidat.email }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ candidat.dateNaissance }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ candidat.adresse }}</td>
            </tr>
            <tr>
                <th>Cv</th>
                <td>{{ candidat.cv }}</td>
            </tr>
            <tr>
                <th>LettreMotivation</th>
                <td>{{ candidat.lettreMotivation }}</td>
            </tr>
            <tr>
                <th>Approuve</th>
                <td>{{ candidat.approuve ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ candidat.createdAt ? candidat.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_candidat_index') }}">back to list</a>

    <a href="{{ path('backend_candidat_edit', {'id': candidat.id}) }}">edit</a>

    {{ include('backend_candidat/_delete_form.html.twig') }}
{% endblock %}
