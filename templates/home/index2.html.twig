        $(document).ready(function () {
            $('#domaine').on('change', function () {
                let domaineId = $(this).val();
                $.get("{{ absolute_url(path('frontend_filtre_accueil')) }}", {value: domaineId})
                .done(function (data) {
                    if (data){ console.log(data)
                        $('#niveau').empty();
                        $('#niveau').append("<option value=''>-</option>")
                        for (let i = 0; i < data.length; i++){
                            const item = data[i]; console.log(item)
                            $('#niveau').append(
                                    "<option value="+item.id+">"+item.libelle+"</option>"
                            )
                        }
                    }
                })
            })
        })
    </script>
