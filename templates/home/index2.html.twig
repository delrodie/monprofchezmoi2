            <div class="slider-content slide1">
                <div class="container">
                    <div class="content-part">
                        <div class="sl-sub-title wow bounceInLeft" data-wow-delay="300ms" data-wow-duration="2000ms">{{ cover.titre }}</div>
                        <h1 class="sl-title wow fadeInRight" data-wow-delay="600ms" data-wow-duration="2000ms">Online Courses From Leading Experts</h1>
                        <div class="sl-btn wow fadeInUp" data-wow-delay="900ms" data-wow-duration="2000ms">
                            <a class="readon orange-btn main-home" href="#">Find Courses</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="slider-content slide2">
                <div class="container">
                    <div class="content-part">
                        <div class="sl-sub-title wow bounceInLeft" data-wow-delay="300ms" data-wow-duration="2000ms">Start to learning today</div>
                        <h1 class="sl-title wow fadeInRight" data-wow-delay="600ms" data-wow-duration="2000ms">Explore Interests and Career With Courses</h1>
                        <div class="sl-btn wow fadeInUp" data-wow-delay="900ms" data-wow-duration="2000ms">
                            <a class="readon orange-btn main-home" href="#">Find Courses</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div id="rs-banner" class="rs-banner style1">
        <div class="container">
            <div class="banner-content text-center">
                <div class="desc mb-35 wow wow fadeInRight" data-wow-delay="900ms" data-wow-duration="3000ms">{{ cover.titre }}</div>
                <h1 class="banner-title wow fadeInLeft" data-wow-delay="300ms" data-wow-duration="3000ms">{{ cover.description }}</h1>
                <div class="banner-btn wow fadeInUp" data-wow-delay="1500ms" data-wow-duration="2000ms">
                    <div class="row search">
                        <div class="col-sm-12">
                            {% if domaines %}
                                <form action="">
                                    <div class="row">
                                        <div class="col-sm-4 mt-2">
                                            <select name="domaine" id="domaine" class="form-control select">
                                                <option value="">Quel domaine vous intéresse?</option>
                                                <option value=""></option>
                                                {% for domaine in domaines %}
                                                    <option value="{{ domaine.id }}">{{ domaine.libelle }}</option>
                                                {% endfor %}

                                            </select>
                                        </div>
                                        <div class="col-sm-4 mt-2">
                                            <select name="niveau" id="niveau" class="form-control select">
                                                <option value="">Quel niveau?</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-3 mt-2">
                                            <select name="sexe" id="sexe" class="form-control select">
                                                <option value="">Les cours sont pour..</option>
                                                <option value="">Mon enfant</option>
                                                <option value="">Moi-même</option>
                                                <option value="">Une autre relation</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-1 mt-2">
                                            <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="rs-degree style1 modify gray-bg pt-100 pb-70 md-pt-70 md-pb-40">
        <div class="container">
            <div class="row y-middle">
                {% if soutiens %}
                    <div class="col-lg-4 col-md-6 mb-30">
                        <div class="sec-title wow fadeInUp" data-wow-delay="300ms" data-wow-duration="2000ms">
                            <div class="sub-title primary">Nos soutiens</div>
                            <h2 class="title mb-0">Scolaires & spécialisés</h2>
                        </div>
                    </div>
                    {% for soutien in soutiens %}
                        <div class="col-lg-4 col-md-6 mb-30 wow{% if loop.index % 2 %}  fadeInRight{% else %} fadeInDown{% endif %}">
                            <div class="degree-wrap">
                                <img src="{{ absolute_url(asset('upload/soutien/'~ soutien.media)) }}" alt="{{ soutien.titre }}">
                                <div class="title-part">
                                    <h4 class="title">{{ soutien.titre }}</h4>
                                </div>
                                <div class="content-part">
                                    <h4 class="title"><a href="#">{{ soutien.titre }}</a></h4>
                                    <p class="desc">{{ soutien.resume|slice(0,72)|raw }} ...

                                    <div class="btn-part">
                                        <a href="{{ absolute_url(path('frontend_soutien_show', {'slug': soutien.slug}) )}}">Voir détails</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                {% endif %}
            </div>
        </div>
    </div>

    {% if presentation %}
        <div class="rs-cta main-home">
            <div class="partition-bg-wrap">
                <div class="container">
                    <div class="row">
                        <div class="offset-lg-6"></div>
