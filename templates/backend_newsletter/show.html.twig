{% extends 'base.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
    <h1>Newsletter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ newsletter.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ newsletter.nom }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ newsletter.contact }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ newsletter.email }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ newsletter.statut ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ newsletter.createdAt ? newsletter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backend_newsletter_index') }}">back to list</a>

    <a href="{{ path('app_backend_newsletter_edit', {'id': newsletter.id}) }}">edit</a>

    {{ include('backend_newsletter/_delete_form.html.twig') }}
{% endblock %}
