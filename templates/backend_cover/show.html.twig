<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h6 class="modal-title" id="exampleModalLabel4">{{ cover.titre }}</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true"><i data-feather="x"></i></span>
            </button>
        </div>
        <div class="modal-body">
            <p class="mt-3">
                {{ cover.description }} <br>
                <img src="{{ absolute_url(asset('upload/cover/'~ cover.media)) }}" alt="{{ cover.titre }}" class="img-thumbnail" style="float: left; margin-right: 20px;">
            </p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            {{ include('backend_cover/_delete_form.html.twig') }}
